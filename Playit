#!/bin/bash
# Playit installation script

set -e

echo "ğŸ”„ === Updating system ==="
sudo apt update -y && sudo apt upgrade -y

echo "ğŸ“¦ === Installing required dependencies ==="
sudo apt install -y sudo curl gpg

echo "ğŸ”‘ === Adding Playit APT repository ==="
curl -fsSL https://playit-cloud.github.io/ppa/key.gpg | \
  gpg --dearmor | sudo tee /etc/apt/trusted.gpg.d/playit.gpg >/dev/null

echo "ğŸ“ === Adding Playit source list ==="
echo "deb [signed-by=/etc/apt/trusted.gpg.d/playit.gpg] https://playit-cloud.github.io/ppa/data ./" | \
  sudo tee /etc/apt/sources.list.d/playit-cloud.list

echo "ğŸ”ƒ === Updating package list ==="
sudo apt update -y

echo "â¬‡ï¸ === Installing Playit ==="
sudo apt install -y playit

echo "âš™ï¸ === Enabling Playit service ==="
sudo systemctl enable --now playit

echo "ğŸ–¥ï¸ === Running Playit setup ==="
playit setup

echo "âœ…ğŸ‰ Playit installation complete!"
echo "âœ¨ This Script Has Been Made By shadow âœ¨"
