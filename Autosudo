```bash
#!/bin/bash

# Colors
RED="\e[31m"
GREEN="\e[32m"
YELLOW="\e[33m"
CYAN="\e[36m"
WHITE="\e[37m"
BOLD="\e[1m"
RESET="\e[0m"

CONFIG_FILE="/etc/ssh/sshd_config"

echo -e "${CYAN}${BOLD}ğŸ” Enabling Root Login via SSH...${RESET}\n"

# Step 1: Backup original config
echo -e "${YELLOW}ğŸ“¦ Backing up current SSH config...${RESET}"
cp "$CONFIG_FILE" "${CONFIG_FILE}.bak"
echo -e "${GREEN}âœ… Backup created at ${WHITE}${CONFIG_FILE}.bak${RESET}\n"

# Step 2: Enable PermitRootLogin yes
echo -e "${YELLOW}ğŸ“ Enabling root login permission...${RESET}"
sed -i 's/^#PermitRootLogin.*/PermitRootLogin yes/' "$CONFIG_FILE"
grep -q "^PermitRootLogin" "$CONFIG_FILE" || echo "PermitRootLogin yes" >> "$CONFIG_FILE"
echo -e "${GREEN}âœ… PermitRootLogin enabled!${RESET}\n"

# Step 3: Handle PasswordAuthentication variations
echo -e "${YELLOW}ğŸ”§ Enabling password authentication...${RESET}"
sed -i '/^#PasswordAuthentication/d' "$CONFIG_FILE"
sed -i '/^PasswordAuthentication/d' "$CONFIG_FILE"
echo "PasswordAuthentication yes" >> "$CONFIG_FILE"
echo -e "${GREEN}âœ… PasswordAuthentication set to YES${RESET}\n"

# Step 4: Restart SSH service
echo -e "${YELLOW}ğŸš€ Restarting SSH service...${RESET}"
systemctl restart ssh
echo -e "${GREEN}âœ… SSH service restarted successfully!${RESET}\n"

# Step 5: Prompt user to set root password
echo -e "${BOLD}${CYAN}âš™ï¸ Final Step:${RESET}"
echo -e "${WHITE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${RESET}"
echo -e "${YELLOW}ğŸ‘‰ Now set your root password manually.${RESET}"
echo -e "${GREEN}ğŸ’¡ Run this command:${RESET} ${BOLD}${WHITE}sudo passwd root${RESET}"
echo -e "${WHITE}â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”${RESET}\n"

echo -e "${GREEN}${BOLD}ğŸ‰ All done! Root login via SSH is now enabled.${RESET}"
```
